<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/farmItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ItemImage"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/veges"
                android:scaleType="centerInside"

                />

            <TextView
                android:id="@+id/Item_Dday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="재배까지 D-70"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="#21d8af"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/item_farmName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="농장이름"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/Item_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 배추 다섯포기 "
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>